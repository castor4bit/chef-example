{
  "name": "web",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "web",
  "default_attributes": {
    "apache2": {
      "listen_ports": [
        "9081"
      ]
    },
    "apache": {
      "default_modules": [
        "deflate",
        "expires",
        "headers",
        "php5",
        "proxy",
        "proxy_http",
        "rewrite",
        "xsendfile"
      ]
    },
    "nginx": {
      "version": "1.6.2",
      "install_method": "source",
      "source": {
        "modules": [
          "nginx::http_ssl_module",
          "nginx::http_gzip_static_module",
          "nginx::passenger"
        ]
      },
      "passenger": {
        "root": "/usr/local/rbenv/versions/2.1.3/lib/ruby/gems/2.1.0/gems/passenger-4.0.53",
        "comment": "todo: $(passenger-config about root)"
      },
      "worker_processes": "4",
      "worker_connections": "1024",
      "server_tokens": "off",
      "gzip": "on"
    }
  },
  "override_attributes": {
    "apache": {
      "listen_ports": [
        "8080"
      ]
    }
  },
  "run_list": [
    "recipe[apache2]",
    "recipe[nginx]",
    "recipe[mysql::client]",
    "recipe[memcached]"
  ]
}

